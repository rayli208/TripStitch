rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // ── Trips ──
    // Anyone can read (public trip pages, profiles, search)
    // Create: only if you set yourself as the owner
    // Update/Delete: only the original owner
    match /trips/{tripId} {
      allow read: if true;
      allow create: if request.auth != null
                    && request.resource.data.userId == request.auth.uid;
      allow update: if request.auth != null
                    && resource.data.userId == request.auth.uid;
      allow delete: if request.auth != null
                    && resource.data.userId == request.auth.uid;
    }

    // ── User's profile ──
    // Anyone can read (needed for public profile pages /u/{username})
    // Only the owner can write
    match /users/{userId}/profile/{docId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // ── Username index ──
    // Anyone can read (username availability checks, resolving usernames)
    // Create: only if the uid field matches the authenticated user
    // Update/Delete: only if you're the current owner
    match /usernames/{username} {
      allow read: if true;
      allow create: if request.auth != null
                    && request.resource.data.uid == request.auth.uid;
      allow update: if request.auth != null
                    && resource.data.uid == request.auth.uid
                    && request.resource.data.uid == request.auth.uid;
      allow delete: if request.auth != null
                    && resource.data.uid == request.auth.uid;
    }
  }
}
